<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- Attributes of view in MainActivity. -->
    <style name="MainActivityViews">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_items</item>
    </style>

    <!-- Attributes of RadioButtons in QuizActivity (inside CardView). -->
    <style name="RadioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_left_rb</item>
        <item name="android:textSize">@dimen/text_answer_size</item>
        <item name="android:textColor">@color/answerTextColor</item>
    </style>

    <style name="DialogResult">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_answer_size</item>
    </style>

</resources>
